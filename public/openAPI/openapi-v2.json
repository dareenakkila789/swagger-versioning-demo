{
  "openapi": "3.0.1",
  "info": {
    "title": "Example API",
    "version": "v2",
    "description": "Simple example API (v2) - added /echo"
  },
  "paths": {
    "/status": {
      "get": {
        "summary": "Get API status (v2)",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "uptime": { "type": "number" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/echo": {
      "post": {
        "summary": "Echo payload",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "text": { "type": "string" } },
                "required": ["text"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Echoed",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    }
  }
}
